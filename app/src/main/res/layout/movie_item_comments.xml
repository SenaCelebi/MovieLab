<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/movie_item_2_picture"
            android:layout_width="94dp"
            android:layout_height="126dp"
            android:layout_margin="5dp"
            android:src="@drawable/poster1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/movie_item_2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:maxLines="1"
                android:text="@string/movie_name"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gotit_price_users_item"
                android:maxLines="1"
                android:textSize="13sp"
                android:text="@string/release_year"
                android:textColor="@color/colorTint"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:textStyle="bold|italic"
                />

            <RatingBar
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />




        </LinearLayout>

        <Button
            android:layout_marginRight="5dp"
            android:id="@+id/btn_add_watclist"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bookmark_inactive"/>



    </LinearLayout>



</android.support.v7.widget.CardView>